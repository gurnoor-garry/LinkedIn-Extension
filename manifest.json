{
  "name": "Relinns Recruitment",
  "version": "1.0",
  "description": "For internal Use",
  "background": {
    "scripts": [
      "js/events.js"
    ]
  },
  "icons": {
    "128": "images/fav-icon.png"
  },
  "page_action": {
    "default_title": "Relinns Recruitment Tool"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "js/content.js"
      ],
      "css": [
        "css/slider.css"
      ]
    }
  ],
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "<all_urls>",
    "declarativeContent",
    "notifications",
    "https://hrm.relinns.in/"
  ],
  "web_accessible_resources": [
    "slider.html",
    "/css/slider.css",
    "/js/slider.js",
    "/js/material/material.min.css",
    "/js/material/material.min.js",
    "/js/material/material-design-iconic-font.min.css",
    "./js/material/icon.css"
  ]
}
